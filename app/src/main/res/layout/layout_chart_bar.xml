<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_form"
        android:background="@drawable/bg_square"
        android:layout_marginTop="@dimen/padding_form"
        android:layout_marginBottom="10dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextViewSmallBlack"
            android:text="@string/progress_order_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"/>


    <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/chartBar"
            android:layout_below="@+id/tvTitle"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewSmallGray"
            android:text="@string/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chartBar"
            android:textSize="10sp"
            android:paddingTop="2.5dp"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>