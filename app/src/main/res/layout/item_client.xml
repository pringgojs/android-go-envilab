<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_selected_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ripple">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/TextViewNormalBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dp"
            android:paddingTop="@dimen/padding_form"
            android:paddingLeft="@dimen/padding_form"
            android:layout_toLeftOf="@+id/label"
            tools:text="PT. Media Baru Digital"
            android:layout_toStartOf="@+id/label"
            android:paddingStart="@dimen/padding_form"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddress"
            style="@style/TextViewSmallGray"
            android:paddingLeft="@dimen/padding_form"
            android:paddingBottom="@dimen/padding_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toLeftOf="@+id/label"
            android:layout_toStartOf="@+id/label"
            tools:text="Sidoarjo, Jawa Timur"
            android:paddingStart="@dimen/padding_form"/>

    <jp.shts.android.library.TriangleLabelView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundColor="@color/colorPrimaryDark"
            app:primaryText="Proper"
            app:corner="rightTop"
            app:primaryTextSize="8sp"
            app:labelCenterPadding="5dp"
            app:labelBottomPadding="5dp"
            app:labelTopPadding="7.5dp"
            app:primaryTextColor="@android:color/white"/>

</RelativeLayout>