<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:background="@drawable/bg_square"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="10dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/TextViewSmallGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5 November 2019"
            android:textSize="10sp"
            android:paddingBottom="7.5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNumber"
            style="@style/TextViewSmallGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123/2019/x91vva"
            android:textSize="10sp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/TextViewSmallBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:maxLength="25"
            tools:text="PT. Media Baru Digital"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCity"
            style="@style/TextViewSmallGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Surabaya, Jawa Timur"
            android:textColor="@color/textview_black_2"
            android:maxLength="25"
            android:paddingBottom="10dp"
            android:textSize="10sp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreateBy"
            style="@style/TextViewSmallGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Surabaya, Jawa Timur"
            android:maxLength="25"
            android:paddingBottom="10dp"
            android:textSize="10sp"
            android:visibility="gone"/>


    <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearanceSingleChipSmall"
            style="@style/SingleChipSmall"/>

</androidx.appcompat.widget.LinearLayoutCompat>